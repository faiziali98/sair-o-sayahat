@model SAIR_O_SIYAHAT_2.Areas.Admin.ViewModel.VendorVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout1.cshtml";
}
<style>
    .form-style {
        text-transform: capitalize;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li style="font-size: 13px;" class="breadcrumb-item"><i class="fas fa-users"></i>Vendors</li>
                        <li style="font-size: 13px;" class="breadcrumb-item active">Add Vendor</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="card card-primary">
            <div class="card-header" style="background-image: linear-gradient(to right, #00b8d4 0%, #00e575 100%);padding: 18px;">
                <h3 class="card-title">Add Vendor:</h3>
            </div>
            <div class="card-body">
                <form action="@Url.Action("CreateVender", "Admin")" method="post" enctype="multipart/form-data" autocomplete = "off">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputfirstName">Username*</label>
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control",@required = "required" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputlastName">Full Name</label>
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control form-style" })
                                @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="useremail">Email*</label>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputnumber">Phone Number*</label>
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @type = "number", @min = "0", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputDescription">Password*</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required",@autocomplete="new-password" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputSpentBudget">Confirm Password*</label>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputName">Logo*</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" accept="image/x-png,image/gif,image/jpeg" name="ImageFile" onchange="loadFile(event)" required>
                                    <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                    <div class="invalid-feedback">Example invalid custom file feedback</div>
                                    <p id="imageName"></p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label style="font-weight: 500;" for="inputDescription">Address*</label>
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control form-style" ,@rows ="4", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row" style="padding-left: 7.5px;">
                        <a href="@Url.Action("ViewVender","Admin",new {active=true })" style="margin-right:12px;" class="btn btn-danger">Cancel</a>
                        <input type="button" value="Submit" data-toggle="modal" data-target="#myModal" class="btn btn-success" >
                    </div>
                    <!-- The Modal -->
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Add Vendor</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <!-- Modal body -->
                                <div class="modal-body">
                                    <p>
                                        Are you sure you want to add new vendor
                                    </p>
                                </div>
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                    <input type="submit" class="btn btn-success" value="Submit" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>

<script>
    $("#vender-menu").addClass("menu-open");
    var loadFile = function (event) {
        var fileName = event.target.files[0].name;
        $('#imageName').html(fileName);
    };
</script>
