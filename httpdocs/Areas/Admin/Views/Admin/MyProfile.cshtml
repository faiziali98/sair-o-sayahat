@model SAIR_O_SIYAHAT_2.Models.ApplicationUser
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout1.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header"></section>
    <!-- Main content -->
    <section class="content">
        <div class="card card-primary">
            <div class="card-header" style="background-image: linear-gradient(to right, #00b8d4 0%, #00e575 100%);padding: 18px;">
                <h3 class="card-title">My Profile:</h3>
            </div>
            <div class="card-body ">
                <div class="row" style="margin:0 auto;justify-content:center;">
                    <div class="col-md-6" style="background-color:aliceblue">
                        <img src="@Model.ImageUrl" style="border-radius: 88px;padding: 21px;display: block;margin-left: auto;margin-right: auto; width: 171px;height: 171px;" />

                        <div class="table-responsive">
                            <table style="width:100%">
                                <tr>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                            Full Name
                                        </label>
                                    </td>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 700;">
                                            @Model.DisplayName
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                            UserName
                                        </label>
                                    </td>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 700;">
                                            @Model.UserName
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                            Email
                                        </label>
                                    </td>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 700;">
                                            @Model.Email
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                            Phone Number
                                        </label>
                                    </td>
                                    <td>
                                        <label style="font-family: sans-serif;font-weight: 700;">
                                            @Model.PhoneNumber
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="row" style="margin:0 auto;justify-content:center;">
                            <a href="@Url.Action("EditProfile","Admin")" type="button" style="display: block;width: 149px;background-color:#00b4d8;border-color:#00b4d8;margin-right:12px;margin-bottom:12px;" class="btn btn-primary editProfile">Edit Profile</a>
                            <a href="@Url.Action("ChangePassword","Admin")" type="button" style="display: block;width: 149px;background-color:#00b4d8;border-color:#00b4d8;margin-bottom:12px;" class="btn btn-primary">Change Password</a>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
