@model SAIR_O_SIYAHAT_2.Models.Offer.Offers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout1.cshtml";
}
<style>
    .form-style {
        text-transform: capitalize;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header"></section>
    <!-- Main content -->
    <section class="content">
        <div class="card card-primary">
            <div class="card-header" style="background-image: linear-gradient(to right, #00b8d4 0%, #00e575 100%);padding: 18px;">
                <h3 class="card-title">Add Offer</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Offer Title</label>
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-style " } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Sale Price</label>
                                    @Html.EditorFor(model => model.SalePrice, new { htmlAttributes = new { @class = "form-control", @min = "0" } })
                                    @Html.ValidationMessageFor(model => model.SalePrice, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Original Price</label>
                                    @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control",@type="number", @min = "0" } })
                                    @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Thumbnail</label>
                                    <div class="custom-file">
                                        @Html.EditorFor(model => model.Thumbnail, new { @class = "custom-file-input", @id = "customFile", htmlAttributes = new { @type = "file" } })
                                        @Html.LabelFor(model => model.Thumbnail, new { @class = "custom-file-label" })
                                        @Html.ValidationMessageFor(model => model.Thumbnail, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Offer Category</label>
                                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control form-style " })
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <!--
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Offer SubCategory</label>
                                    @Html.DropDownList("SubCategoryId", null, htmlAttributes: new { @class = "form-control form-style ", @onchange = "FillCategories()" })
                                    @Html.ValidationMessageFor(model => model.CategoryObject.SubCategoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            -->
                        </div>
                        <div class="form-group">
                            <label style="font-weight: 500;" for="inputStatus">Description</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control form-style ", @row = "4" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Expiry Date</label>
                                    @Html.EditorFor(model => model.ExpiryDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.ExpiryDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label style="font-weight: 500;" for="inputStatus">Offer Items</label>
                                    @Html.EditorFor(model => model.item, new { htmlAttributes = new { @class = "form-control",@type="number" , @min = "0" } })
                                    @Html.ValidationMessageFor(model => model.item, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="button" data-toggle="modal" data-target="#myModal" value="Add" style="background: #00b4d8;border: 1px solid #00b4d8;" class="btn btn-success" />
                            <a href="@Url.Action("Index")" class="btn btn-outline-danger">Cancel</a>
                        </div>

                    </div>
                    <!-- The Modal -->
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Add a new offer</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <!-- Modal body -->
                                <div class="modal-body">
                                    Are you sure you want to create this offer.
                                </div>
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <input type="submit" value="Add" class="btn btn-success" />
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /.card-body -->
            <!-- /.card -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<script>
    $("#offer-menu").addClass("menu-open");
</script>

<script type="text/javascript">
    function FillCategories() {
        var SubCategoryId = $('#SubCategoryId').val();
        $.ajax({
            url: 'FillCategories',
            type: "GET",
            dataType: "JSON",
            data: { SubCategoryId: SubCategoryId },
            success: function (response) {
                console.log(response);
                $("#CategoryId").html("");
                $.each(response, function (index, value) {
                    $("#CategoryId").append(
                        $('<option></option>').val(value.BookId).html(value.BookName));
                });
            }
        });
    }
</script>