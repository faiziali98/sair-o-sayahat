@model IEnumerable<SAIR_O_SIYAHAT_2.Models.Admin.SpalshScreen>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout1.cshtml";
}


<style>
    .fa-eye {
        cursor: pointer;
    }

    .modal-title {
        color: #00b4d8;
    }
    .dataTables_filter {
        display: none;
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li style="font-size: 13px;" class="breadcrumb-item"><i class="fas fa-icons"></i>Admin Ads</li>
                        <li style="font-size: 13px;" class="breadcrumb-item active">Splash Screen</li>
                        
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="card card-primary">
            <div class="card-header" style="background-image: linear-gradient(to right, #00b8d4 0%, #00e575 100%);padding: 18px;">
                <h3 class="card-title">Splash Screen</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered responsive nowrap dataTable dtr-inline collapsed" style="width:100%;" id="table_id">
                    <thead>
                        <tr>
                            <th>
                                Title
                            </th>
                            <th>
                                Featured Image
                            </th>
                            <th>
                                Updated at
                            </th>
                            <th scope="col"> Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <img src="@item.Thumbnail" style="width:80px;height:80px" />
                            </td>
                            @if (item.UpdatedAt.HasValue)
                            {
                                <td>@item.UpdatedAt.Value.ToString("dd/MM/yyyy hh:mm:ss tt")</td>
                            }
                            else
                            {
                                <td>@item.UpdatedAt</td>
                            }
                            <td>
                                <a class="btn btn-xs btn-default" href="@Url.Action("Edit",new {id=item.Id })">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <!-- Trigger the modal with a button -->
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<script>
    $("#ad-management-menu").addClass("menu-open");
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table_id').DataTable({
            "paging": false,
            "ordering": false,
            "search": false,
            "info": false
        });
    });
</script>