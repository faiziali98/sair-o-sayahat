@model SAIR_O_SIYAHAT_2.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout_website.cshtml";
}
<div class="wrapper">
    <!-- Login Form -->
    <div class="site-content" style="">
        <div class="container">
            <div class="row" style="margin-top: 30px;display: flex;justify-content: center;">
                <div class="col-md-6">
                    <div>
                        <h2 style="margin-bottom: 10px;font-family: 'Montserrat', sans-serif;color: #00b8d4;text-align: center;">
                            <strong>Reset Password</strong>
                        </h2>
                    </div>
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Code)
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Email</strong></label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Password</strong></label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Confirm Password</strong></label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" style="width: 100%;height: 50px;background-color: #00b8d4;border-color: #00b8d4;margin-bottom: 24px;">Reset Password</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Login Form Ends  -->
</div>

