@model SAIR_O_SIYAHAT_2.Models.ApplicationUser
@{
    Layout = "~/Views/Shared/_Layout_website.cshtml";
}
<style>
    @@media(max-width:369px) {
        .editProfile{
            margin-right:2px!important;
        }
    }
    td{
        width:30%;
    }
</style>

<div class="container">
    <div class="row" style="margin: 0 auto;justify-content: center;margin-top: 48px;">
        <h3 style="color:#00b4d8;font-weight:700;font-size: 30px;">
            My Profile
        </h3>
    </div>
    <div class="row" style="margin:0 auto;justify-content:center;">
        <div class="col-md-6" style="background-color:aliceblue">
            <img src="@Model.ImageUrl" style="border-radius: 88px;padding: 21px;display: block;margin-left: auto;margin-right: auto; width: 171px;height: 171px;" />
            
            <div class="table-responsive">
                <table style="width:100%">
                    <tr>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                Full Name
                            </label>
                        </td>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;">
                                @Model.DisplayName
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                UserName
                            </label>
                        </td>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;">
                                @Model.UserName
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                Email
                            </label>
                        </td>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;">
                                @Model.Email
                            </label>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;color: #00b4d8;">
                                Phone Number
                            </label>
                        </td>
                        <td>
                            <label style="font-family: sans-serif;font-weight: 900;">
                                @Model.PhoneNumber
                            </label>
                        </td>
                    </tr>
                </table>
            </div>
            
            <div class="row" style="margin:0 auto;justify-content:center;">
                <a href="@Url.Action("EditProfile","Manage")" type="button" style="display: block;width: 149px;background-color:#00b4d8;border-color:#00b4d8;margin-right:12px;margin-bottom:12px;"  class="btn btn-primary editProfile">Edit Profile</a>
                <a href="@Url.Action("ChangePassword","Manage")" type="button" style="display: block;width: 149px;background-color:#00b4d8;border-color:#00b4d8;margin-bottom:12px;" class="btn btn-primary">Change Password</a>
            </div>
        </div>
        
    </div>
    
</div>
<script>
    $('#tab_account').addClass("active");
</script>
