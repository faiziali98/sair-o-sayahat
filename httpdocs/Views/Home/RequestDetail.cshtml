@model SAIR_O_SIYAHAT_2.Models.Offer.OfferMeta
@{
    Layout = "~/Views/Shared/_Layout_website.cshtml";
}
<br />
<div class="container">
    <div class="row">
        <h2 style="font-size:25px;font-weight:700;color:#00b4d8;">Request Detail</h2>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-8 col-sm-12" style="margin-bottom: 40px;background-color:#f8f9fa;">
            <div class="order-box" style="margin-top: 16px;">
                <h3 style="font-size:30px;text-align: center;color:#00b4d8;">Order# @ViewBag.Id</h3>
                <div class="d-flex">
                    <h4>Offer Name</h4>
                    <div class="ml-auto font-weight-bold"> @Html.DisplayFor(model => model.OfferObject.Name) </div>
                </div>
                <div class="d-flex">
                    <h4>Quantity</h4>
                    <div class="ml-auto font-weight-bold"> @Html.DisplayFor(model => model.Quantity) </div>
                </div>
                <hr>
                <div class="d-flex">
                    <h4>Paid</h4>
                    <div class="ml-auto font-weight-bold">
                        Paid
                    </div>
                </div>
                <div class="d-flex">
                    <h4>Token</h4>
                    <div class="ml-auto font-weight-bold">
                        @Html.DisplayFor(model => model.Token)
                    </div>
                </div>
                <hr class="my-1">
                <div class="d-flex gr-total">
                    <h5>Status</h5>
                    <div class="ml-auto h5" style="color:#2a6c29;font-size:30px;"> Paid </div>
                </div>
                <hr>
            </div>
        </div>
        <div class="col-lg-4 col-sm-12">
            <form action="@Url.Action("AddRating","Home",new {id = @ViewBag.Id })" method="post">
                <div>
                    <a style="cursor:pointer;" onclick="star(1)"><i id="star-1" style="color:#faca51;" class="fas fa-star "></i></a>
                    <a style="cursor:pointer;" onclick="star(2)"><i id="star-2" style="color:#faca51;" class="fas fa-star "></i></a>
                    <a style="cursor:pointer;" onclick="star(3)"><i id="star-3" style="color:#faca51;" class="fas fa-star "></i></a>
                    <a style="cursor:pointer;" onclick="star(4)"><i id="star-4" style="color:#faca51;" class="fas fa-star "></i></a>
                    <a style="cursor:pointer;" onclick="star(5)"><i id="star-5" style="color:#faca51;" class="fas fa-star "></i></a>
                </div>
                <div class="form-group">
                    <!---->
                    <input style="display:none;" type="text" id="rating" name="rating" value="5" readonly />
                    <!---->
                    <textarea class="form-control" placeholder="Write A Review" id="review" name="review" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" style="background:#00b4d8;border-color:#00b4d8;" class="btn btn-primary">Add Review</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    function star(num) {
        var styles = {
            color: "#faca51",
        };
        var backstyle = {
            color: "grey",
        };
        if (num == 1) {
            $('#star-1').css(styles);
            $('#star-2').css(backstyle);
            $('#star-3').css(backstyle);
            $('#star-4').css(backstyle);
            $('#star-5').css(backstyle);
            $('#rating').val("1");
        }
        else if (num == 2) {
            $('#star-1').css(styles);
            $('#star-2').css(styles);
            $('#star-3').css(backstyle);
            $('#star-4').css(backstyle);
            $('#star-5').css(backstyle);
            $('#rating').val("2");
        }
        else if (num == 3) {
            $('#star-1').css(styles);
            $('#star-2').css(styles);
            $('#star-3').css(styles);
            $('#star-4').css(backstyle);
            $('#star-5').css(backstyle);
            $('#rating').val("3");
        }
        else if (num == 4) {
            $('#star-1').css(styles);
            $('#star-2').css(styles);
            $('#star-3').css(styles);
            $('#star-4').css(styles);
            $('#star-5').css(backstyle);
            $('#rating').val("4");
        }
        else if (num == 5) {
            $('#star-1').css(styles);
            $('#star-2').css(styles);
            $('#star-3').css(styles);
            $('#star-4').css(styles);
            $('#star-5').css(styles);
            $('#rating').val("5");
        }
    }
</script>
<script>
    $('#tab_account').addClass("active");
</script>