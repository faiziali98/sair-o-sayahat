@model SAIR_O_SIYAHAT_2.Models.EditProfileViewModel
@{
    Layout = "~/Views/Shared/_Layout_website.cshtml";
}
<style>
    .attr-nav {
        display: none;
    }

    .form-style {
        text-transform: capitalize;
    }
</style>
<div class="wrapper">
    <!-- Login Form -->
    <div class="site-content" style="">
        <div class="container">
            <div class="row" style="margin-top: 30px;display: flex;justify-content: center;">
                <div class="col-md-6">
                    <div>
                        <h2 style="margin-bottom: 10px;font-family: 'Montserrat', sans-serif;color: #00b8d4;text-align: center;">
                            <strong>Edit Profile</strong>
                        </h2>
                    </div>
                    
                    <form action="@Url.Action("EditProfile", "Manage")" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Display Name</strong></label>
                            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control form-style" })
                            @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Email</strong></label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label style="font-weight: 500;" for="inputName">Profile Pic*</label>
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" accept="image/x-png,image/gif,image/jpeg" name="ImageFile" onchange="loadFile(event)" required>
                                <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                <div class="invalid-feedback">Example invalid custom file feedback</div>
                                <p id="imageName"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Address</strong></label>
                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control form-style", @required = "required", @rows = "4" })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label style="font-weight: bold;font-size: 15px;margin-bottom: 5px;display: block;color: #949494;"><strong>Phone</strong></label>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @required = "required", @type = "number", @min = "0" })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("MyProfile","Home")" type="button" class="btn btn-outline-danger" style="margin-bottom: 24px;">Cancel</a>
                            <input type="submit" style="background-color: #00b8d4;border-color: #00b8d4;margin-bottom: 24px;" class="btn btn-primary" value="Submit" />
                        </div>
                        </form>
                    </div>
            </div>
        </div>
    </div>
    <!-- Login Form Ends  -->
</div>
<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<script>
    var loadFile = function (event) {
        var fileName = event.target.files[0].name;
        $('#imageName').html(fileName);
    };
</script>