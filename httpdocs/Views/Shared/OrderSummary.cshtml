

<div class="col-lg-4 col-sm-12" style="background-color: #f8f9fa;">
    <div class="order-box" style="margin-top: 16px;">
        <h3 style="font-size:24px;text-align: center;">Order summary</h3>
        <div class="d-flex">
            <h4>Total Offers</h4>
            <div class=" font-weight-bold" style="margin-left:auto;"> @ViewBag.TotalOffer </div>
        </div>
        <div class="d-flex">
            <h4>Total Products</h4>
            <div class=" font-weight-bold" style="margin-left:auto;"> @ViewBag.TotalProduct </div>
        </div>
        <hr>
        <div class="d-flex">
            <h4>Sub Total</h4>
            <div class=" font-weight-bold" style="margin-left:auto;">
                Rs. @ViewBag.Price
            </div>
        </div>
        <hr class="my-1">
        <div class="d-flex">
            <h3 style="font-weight: 800;color: #00b4d8;font-size:20px;">Grand Total</h3>
            <div class="h5" style="margin-left:auto;"> Rs. @ViewBag.Price </div>
        </div>
    </div>
    <div class="row" style="margin-top:16px;">
        <div style="padding:0px;margin-left:auto;" class="col-12 d-flex shopping-box btn hvr-hover"><a href="@Url.Action("Checkout","Home")" style="width:100%;" onclick="checkout();">Send Request</a> </div>
    </div>
</div>
