@model SAIR_O_SIYAHAT_2.Models.ViewModel.VendorEmployeeVM
@{
    Layout = "~/Views/Shared/_Layout_website.cshtml";
}
<style>
    .form-style {
        text-transform: capitalize;
    }
</style>
<div class="container" style="margin-top:30px;">
    <div class="row" style="margin:0 auto;justify-content:center;">
        <h3 style="color:#00b4d8;font-weight:700;font-size: 31px;">Add Vendor Employees</h3>
    </div>
    <form action="@Url.Action("CreateVendorEmployee", "VendorEmployee")" method="post" enctype="multipart/form-data" autocomplete="off">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputfirstName">Username*</label>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputlastName">Display Name</label>
                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control form-style" })
                    @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="useremail">Email*</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputnumber">Phone Number*</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @type = "number", @min = "0", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputDescription">Password*</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputSpentBudget">Confirm Password*</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputDescription">Address*</label>
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control form-style", @rows = "4", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label style="font-weight: 500;" for="inputSpentBudget">Profile Pic*</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" name="ImageFile" onchange="loadFile(event)" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                        <div class="invalid-feedback">Example invalid custom file feedback</div>
                        <p id="imageName"></p>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row" style="padding-left: 7.5px;">
            <a style="margin-right:12px;" href="@Url.Action("ViewVendorEmployee","VendorEmployee")" class="btn btn-outline-danger">Cancel</a>
            <input type="submit" value="Submit" class="btn btn-success">
        </div>
    </form>
</div>


<script>
    var loadFile = function (event) {
        var fileName = event.target.files[0].name;
        $('#imageName').html(fileName);
    };
</script>
<script>
    $('#tab_account').addClass("active");
</script>
