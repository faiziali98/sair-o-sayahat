@model IEnumerable<SAIR_O_SIYAHAT_2.Models.ApplicationUser>
@{
    /**/

    Layout = "~/Views/Shared/_Layout_website.cshtml";
}

<div class="cart-box-main">
    <div class="container">
        <div class="row" style="margin:0 auto;">
            <h3 style="color:#00b4d8;font-weight:700;font-size: 31px;">Vendor Employees</h3>
        </div>
        <div class="row" style="margin:0 auto;justify-content:flex-end;">
            <a class="btn btn-primary" href="@Url.Action("CreateVendorEmployee","VendorEmployee")" type="button">Create New Employee</a>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Sr#</th>
                                <th scope="col">Username</th>
                                <th scope="col">Full Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Email</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var count = 0;
                            }
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.UserName</td>
                                        <td>@item.DisplayName</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a data-toggle="modal" data-target="#@item.Id-1" class="btn btn-xs btn-outline-danger">
                                                <i class="fas fa-user-times" style=""></i>
                                            </a>
                                        </td>
                                    </tr>

                                    <!-- The Modal -->
                                    <div class="modal fade" id="@item.Id-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <!-- Modal Header -->
                                                <div class="modal-header">
                                                    <h4 class="modal-title" style="color:#00b4d8">Block Employee</h4>
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>
                                                <!-- Modal body -->
                                                <div class="modal-body">
                                                    <p>
                                                        Are you sure you want to remove this employee?
                                                    </p>
                                                </div>
                                                <!-- Modal footer -->
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                                    <a type="button" href="@Url.Action("RemoveVendorEmployee","VendorEmployee",new { id=@item.Id})" class="btn btn-primary">Remove</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="9">
                                        <h2>No Matching Results</h2>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
if ("@ViewBag.addEmployee" == "success")
{
    swal("", "You have created a new employee ", "success");
    }
    if ("@ViewBag.reomveEmployee" == "success")
{
    swal("", "Employee Removed Successfully", "success");
}
</script>
<script>
    $('#tab_account').addClass("active");
</script>
